<h1> Mechanic <%= @mechanic.id %> </h1>
<p> Name: <%= @mechanic.name %> </p>
<p> Years of Experience: <%= @mechanic.years_experience %> </p>
<p> Rides: 
  <% @mechanic.rides.each do |ride| %>   
    <%= ride.name %>
  <% end %>
</p>

<h3> Add a ride to Mechanic: </h3>
<%= form_with url: mechanic_rides_path, method: :post, local: true do |form| %>
  <p> <%= form.label :ride_id %> </p> 
  <p> <%= form.number_field :ride_id %> </p>
  <p> <%= form.submit "Submit" %> </p>
<% end %>